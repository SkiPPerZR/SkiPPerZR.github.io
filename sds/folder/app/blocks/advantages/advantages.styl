.advantages
	margin-bottom 120px
	background-color $white
	&__title
		margin-top 110px
		margin-bottom 10px
		border-bottom 1px solid $lightGray
		h3
			text-align center
			width 285px
			margin 0 auto
			padding 20px 0
			font 1.375rem $regularMain
			color $gray
			border-bottom 2px solid $red
	&__text
		margin-top 45px
		h4
			text-align center
			font 1.125rem $regularMain
			color $gray
		.item
			margin-top 50px
			.item-contant
				height 175px
				width 230px
				margin 0 auto
				p
					padding-top 135px
					text-align center
					font 1rem $regularMain
					color $gray
			.img1
				background url("../images/quality.png") no-repeat 50% 35% #fefefe
			.img2
				background url("../images/human.png") no-repeat 50% 35% #fefefe
			.img3
				background url("../images/clock.png") no-repeat 50% 35% #fefefe
	
		