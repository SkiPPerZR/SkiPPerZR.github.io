.product
	&__section
		margin-top 30px
		display inline-block
		padding 0
		border-right 2px solid $buttonRed
		h4
			padding 0 15px
			a
				font 1.125rem $semibold
				color $gray
				&:hover
					color $darkGray
		&:first-child
			a
				color $pointGray
		&:last-child
			border-right none
		@media(max-width 992px)
			display block
			text-align center
			border-right none
	&__breadcrumbs
		margin 40px 0px 20px 0px
		p
			span
				font 1.125rem $regularMain
				color $gray
			a
				font 1.125rem $regularMain
				color $gray
				text-decoration none
	&__catalog
		border-bottom 1px solid $lightGray
		margin-bottom 20px
		h3
			margin 0 auto
			padding 20px 0
			width 355px
			text-align center
			font 1.375rem $regularMain
			color $gray
			border-bottom 2px solid $red
			@media(max-width 480px)
				width 265px
	&__title
		margin-top 55px
		margin-bottom 65px
		h3
			text-align center
			font 1.625rem $bold
			color $gray
	&__tabs
		.tabNavigation
			text-align center
			margin-bottom 30px
			.selected
				color $lightGray
			li
				list-style-type none
				a
					margin-right 3px
					padding 30px 56px
					font 1.375rem $bold
					color $white
					background-color $fontGray
					&:focus,&:hover,&:active
						text-decoration none
						transition 0.3s ease
						color $fontGray
						background-color $darkWhite
					@media(max-width 1200px)
						padding 28px 38px
					@media(max-width 992px)
						padding 18px 21px
					@media(max-width 780px)
						padding 15px 42%
					@media(max-width 480px)
						padding 15px 35%
		.col-lg-12,.col-md-12,.col-sm-12,.col-xs-12
			padding-right 7px !important
			padding-left 6px !important
			@media(max-width 1200px)
				padding-right 14px !important
				padding-left 11px !important
			@media(max-width 992px)
				padding-right 5px !important
				padding-left 3px !important
			@media(max-width 780px)
				padding-right 2.8% !important
				padding-left 2.4% !important
		.product__item
			padding-left 50px
			width 100%
			background-color $darkWhite
			@media(max-width 780px)
				padding-left 15px
				padding-right 15px
			h2
				padding-top 60px
				padding-bottom 15px
				font 1.625rem $semibold
				color $fontDirtyGray
			img
				margin-right 35px
				margin-top -20%
				display inline-block
				@media(max-width 1200px)
					margin-top -25%
				@media(max-width 992px)
					margin-top 0
			.product__item-text
				display inline-block
				max-width 365px
				text-align left
				p
					font 1.125rem $semibold
					color $fontDirtyGray
					line-height 28pt
					span
						color $fontDarkGray
				ul
					font 1.125rem $semibold
					color $fontDirtyGray
					line-height 28pt
					li
						font 1.125rem $semibold
						color $fontDarkGray
						list-style-type none
						line-height 20pt
						&:before
							color $buttonRed
							content '•'
							font-size 2rem
							padding-right 10px
				.price
					display block
					margin-top 10px
					font 1.125rem $extrabold
					color $fontDarkGray
					@media(max-width 480px)
						margin-bottom 7px
				a
					font 1.125rem $semibold
					color $buttonRed
					text-decoration underline
					&:hover
						color $red
				button
					margin-top 15px
					margin-bottom 70px
					margin-left 50px
					padding 15px 0px
					border none
					outline none
					background-color $green
					@media(max-width 480px)
						margin-left 1px
						margin-bottom 20px
					&:hover
						background-color $darkGreen
					a
						padding 15px 35px
						font 0.875rem $bold
						color $white
						text-decoration none
						&:hover
							color $white
		.product__manual
			margin-left 50px
			@media(min-width 992px)
				margin-top 75px
			@media(max-width 780px)
				margin-left 0
			@media(max-width 480px)
				margin-top 35px
			ul:before,li:before
				padding-right 7px !important
				content '•'
				font-size 1.8rem
				line-height none
			li:before
				color $buttonRed
			ul:before
				color $pointGray
			h2
				margin-bottom 21px
				font 1.125rem $bold
				color $fontDarkGray
			li
				font 1rem $bold
				color $fontDarkGray
				line-height 28px
				padding-left 0px !important
				list-style-type none
			li ul
				margin-top 0px
				font 0.875rem $bold
				color $fontDarkGray
				line-height 28px
				padding-left 30px !important
				list-style-type none
			li ul li
				margin-top 0px
				font 0.75rem $bold
				color $fontDarkGray
				line-height 28px
				padding-left 30px !important
				list-style-type none