html, body
	height 100%
	font-size 16px !important
	@media(max-width 768px)
		font-size 14px !important
	@media(max-width 480px)
		font-size 12px !important

body
	font-size 16px
	line-height $lineHeight
	font-family $regular
	


a
	text-decoration none
	
	transition all .2s ease
	
	&:hover
		transition none